<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allabo.fyl.fyl_server.mapper.RecommendationMapper">

    <!-- 신용카드 필터링 쿼리 -->
    <select id="selectCreditCardRecommendations" resultType="com.allabo.fyl.fyl_server.entity.Recommendation" parameterType="map">
        SELECT * FROM credit_card_products
        WHERE 1 = 1
        <if test="annualFee != null">
            AND credit_card_annual_fee &lt;= #{annualFee}
        </if>
        <if test="benefits != null and benefits != ''">
            AND credit_card_keyword LIKE CONCAT('%', #{benefits}, '%')
        </if>
        <if test="category != null and category != ''">
            AND credit_card_category LIKE CONCAT('%', #{category}, '%')
        </if>
    </select>

</mapper>
